<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>
<body>
  <!-- <%- include("partials/_header") %> -->
  <nav>
    <img src="/images/logo.png" id="logo" width="400" height="60" />
    <div class="nav right">
      <a href="/">Home</a>
      <i class="fas fa-book-open"></i>
      <a href="/new_story">Create Story</a>
      <i class="fas fa-book-open"></i>
      <p>USER</p>
    </div>
  </nav>
  <main class="container">
    <article class="view-story">
      <div class="story-header">
        <h3>Test Author</h3>
        <h3>Test Status</h3>
      </div>
      <div class="story-content">This is a test story</div>
    </article>
    <div id="new-contribution">
      <h2>Contribute to This Story</h2>
      <section>
        <form action="/story" method="POST">
          <!-- <textarea name="story-title" id="story-title" placeholder="title" ></textarea> -->
          <textarea name="story" id="story-text"></textarea>
          <div>
            <button type="submit" class="button">Submit</button>
          </div>
        </form>
      </section>
    </div>
    <h2>Contributions</h2>
    <div class="container">
      <article class="story-contribution">
        <div>
          <h3>Test Author</h3>
        </div>
        <p>This is a test contribution</p>
        <div class="contribution-footer">
          <i class="far fa-thumbs-up"></i>
          <p>Votes</p>
        </div>
      </article>

    </div>
    <!-- <%- console.log(storyObj) %> -->
  </main>

</body>
</html>
